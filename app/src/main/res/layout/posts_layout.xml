<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/profile_pic"
                android:padding="3dp"

                />

            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Omkar Sawant"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:id="@+id/name"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pittsburgh, Pennsylvania"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:id="@+id/location"/>



            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/play"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:src="@mipmap/play"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/pause"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:src="@mipmap/pause"
                android:visibility="invisible"
                />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrubber"
                android:layout_below="@+id/pause"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:indeterminate="false"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <pl.droidsonroids.gif.GifTextView
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/like"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>

            <pl.droidsonroids.gif.GifTextView
                android:id="@+id/love"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/love"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>


            <pl.droidsonroids.gif.GifTextView
                android:id="@+id/haha"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/source"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>

            <pl.droidsonroids.gif.GifTextView
            android:id="@+id/angry"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/angry"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"/>

            <pl.droidsonroids.gif.GifTextView
                android:id="@+id/wow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/wow"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>

            <pl.droidsonroids.gif.GifTextView
                android:id="@+id/sad"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/sad"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:text="Here the description of the post is displayed."
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#000000"
            android:textSize="16sp"

            />



    </LinearLayout>

</android.support.v7.widget.CardView>